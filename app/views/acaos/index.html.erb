<p id="notice"><%= notice %></p>

<h1>Acaos</h1>

<table>
  <thead>
    <tr>
      <th>Acao nome</th>
      <th>Acao classe</th>
      <th>Exc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acaos.each do |acao| %>
      <tr>
        <td><%= acao.acao_nome %></td>
        <td><%= acao.acao_classe %></td>
        <td><%= acao.exc %></td>
        <td><%= link_to 'Show', acao %></td>
        <td><%= link_to 'Edit', edit_acao_path(acao) %></td>
        <td><%= link_to 'Destroy', acao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

